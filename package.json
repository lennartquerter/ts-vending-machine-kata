{
  "name": "vending-machine",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "",
    "serve": "",
    "code:reset": "rm -rf ./src && mkdir ./src && cp -r ./support/code_versions/000_src_setup/ ./src/",
    "code:step-1": "rm -rf ./src && mkdir ./src && cp -r ./support/code_versions/001_src_step-1/ ./src/",
    "code:step-2": "rm -rf ./src && mkdir ./src && cp -r ./support/code_versions/002_src_step-2/ ./src/",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier -c \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@types/jest": "^29.4.0",
    "readline": "^1.3.0",
    "ts-jest": "^29.0.5"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "^29.4.2",
    "jest-create-mock-instance": "^2.0.0",
    "prettier": "^2.8.4",
    "tsc": "^2.0.4",
    "typescript": "^4.9.5"
  },
  "prettier": "./prettier-defaults.json",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "coverageReporters": [
      "text"
    ],
    "reporters": [
      "default"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "./src/**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "./dist",
      "./test",
      "./node_modules/"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "maxWorkers": 4
  }
}
